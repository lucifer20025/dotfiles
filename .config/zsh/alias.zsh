# Sourcing my plugins
source ~/.config/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
source ~/.config/zsh/plugins/zsh-abbr/zsh-abbr.zsh
source ~/.config/zsh/plugins/fast-syntax-highlighting/fast-syntax-highlighting.plugin.zsh
source ~/.config/zsh/plugins/powerlevel10k/powerlevel10k.zsh-theme
source ~/.config/zsh/plugins/zsh-colored-man-pages/colored-man-pages.plugin.zsh
source ~/.config/zsh/plugins/colorize/colorize.plugin.zsh
source ~/.local/share/lscolors.sh

# Aliases
abbr zshcfg="nvim ~/.config/zsh/.zshrc"
abbr zshsrc="source ~/.config/zsh/.zshrc"
abbr sudo="sudo "
abbr gst="git status | more"
abbr ls="ls --color"
abbr ll="ls -l --color"
abbr la="ls -a --color"
abbr lal="ls -al --color"
abbr downloads="rcd /MassStorage/downloads/"
abbr r="ranger"
abbr rcfg="nvim ~/.config/ranger/rc.conf"
abbr vim="nvim"
abbr pac="sudo pacman"
abbr coding="rcd /MassStorage/coding/"
abbr media="rcd /MassStorage/Media/"
abbr vimcfg="nvim ~/.config/nvim/init.vim"


